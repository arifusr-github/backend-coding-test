{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ride",
    "description": "Ride information",
    "type": "object",
    "properties": {
      "start_lat": {
        "description": "Start latitude of rider",
        "type": "number",
        "minimum": -90,
        "maximum": 90,
        "required": true
      },
      "start_long": {
        "description": "Start longtitude of rider",
        "type": "number",
        "required": true
      },
      "end_lat": {
        "description": "End latitude of rider",
        "type": "number",
        "required": true
      },
      "end_long": {
        "description": "End longtitude of rider",
        "type": "number",
        "required": true
      },
      "rider_name": {
        "description": "Rider name",
        "type": "string",
        "required": true
      },
      "driver_name": {
        "description": "Driver name",
        "type": "string",
        "minLength": 3,
        "maxLength": 30,
        "required": true
      },
      "driver_vehicle": {
        "description": "Driver vehicle",
        "type": "string",
        "required": true
      }
    }
  }